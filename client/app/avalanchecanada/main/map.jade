.page.container-fluid.ac-no-gutter.ac-view-map
    div(ac-mapbox-map, ac-regions='regions', ac-region='current.region', ac-report = "current.report", ac-show-regions="regionsVisible", ac-obs="obs", ac-ob="current.ob", ac-min-filters="filters.minFilters",top-offset="75", style="width: 100%;")
    div.ac-drawer-right(ac-drawer, ac-drawer-position='right', ng-class="{'ac-drawer--expanded': current.region && current.region.feature.properties.forecast && drawer.right.visible && drawer.right.enabled && regionsVisible}")
        div(ac-forecast-mini='ac-forecast-mini', ac-forecast='current.region.feature.properties.forecast', danger-rating='dangerRating', disclaimer='disclaimer', sponsor='sponsor')
    div.ac-drawer-left(ac-drawer, ac-drawer-position='left', ng-class="{'ac-drawer--expanded': current.report && drawer.left.visible}")
        div(ac-observation-min='ac-observation-min', observation='current.report', sponsor='sponsor')
    div(ac-loading-indicator, ng-if="requestInProgress")

